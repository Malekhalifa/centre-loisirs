{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["@types/node", "@types/vue"], // Ajout des types pour Vue
    "module": "es2015",
    "moduleResolution": "bundler" // Important pour la r√©solution des modules Vue
  }
}
